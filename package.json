{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "db": "ts-node scripts/db-update.ts",
    "dev": "nest start --watch",
    "reset:full": " rm -rf prisma/migrations && npm run clear:db && npx prisma migrate dev --name init && npm run seed:basic",
    "seed:start": "ts-node prisma/seeds/run-seed.ts",
    "seed:basic": "ts-node prisma/seeds/basic/seed.ts",
    "seed:trails": "ts-node prisma/seeds/basic/trails/trails.ts",
    "seed:courses": "ts-node prisma/seeds/basic/courses/courses.ts",
    "seed:trails-courses": "npm run seed:trails && npm run seed:courses",
    "seed:mock": "tsx prisma/seeds/basic/templates-forms/seed-mock-form.ts",
    "test:mock": "tsx prisma/seeds/basic/templates-forms/test-mock-form.ts",
    "seed:demo": "ts-node prisma/seeds/demos/default/main.ts",
    "seed:detran": "ts-node prisma/seeds/demos/detran/main.ts",
    "seed:submitedForms": "ts-node prisma/seeds/submited-forms/submmited-forms-seed.ts",
    "seed:forms": "ts-node prisma/seeds/templates-forms/template-forms-seed.ts",
    "seed:orgForms": "ts-node prisma/seeds/utils/organizations-forms.ts",
    "seed:deleteTestUsers": "ts-node -P tsconfig.seeds.json prisma/seeds/utils/delete-supabase-test-users.ts",
    "build": "nest build",
    "clear:db": "npx prisma migrate reset --force && npm run seed:deleteTestUsers",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/src/main",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:forms": "ts-node scripts/test-forms.ts",
    "test:forms:quick": "ts-node scripts/quick-form-test.ts",
    "test:forms:auto": "ts-node scripts/quick-form-test.ts",
    "test:forms:demo": "ts-node scripts/run-tests.ts",
    "test:forms:list": "ts-node scripts/list-forms.ts",
    "test:forms:simple": "ts-node scripts/test-forms-simple.ts",
    "test:forms:specific": "ts-node scripts/test-specific-form.ts",
    "test:auth": "ts-node scripts/test-auth.ts",

    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:reset": "npx prisma migrate reset",
    "prebuild": "npm run prisma:generate",
    "deploy:staging": "flyctl deploy -c fly.staging.toml",
    "deploy:prod": "flyctl deploy -c fly.prod.toml",
    "update:secrets": "npx tsx scripts/update-fly-secrets.ts",
    "build:test": "tsx scripts/build-and-test.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.2",
    "@prisma/adapter-pg": "^6.9.0",
    "@prisma/client": "^6.10.1",
    "@sendgrid/mail": "^8.1.5",
    "@supabase/supabase-js": "^2.50.4",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^3.0.2",
    "chalk": "^4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "axios": "^1.7.9",
    "dotenv": "^17.2.1",
    "lodash": "^4.17.21",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.0",
    "prisma": "^6.10.1",
    "qs": "^6.14.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "tsx": "^4.20.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@flydotio/dockerfile": "^0.7.10",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/chalk": "^0.4.31",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.14.202",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
